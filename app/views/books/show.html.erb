
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform' %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<%= render 'books/book_show', book: @book %>

		<!-- コメント機能 -->
		<div id="comments_area">
			<%= render partial: 'book_comments/index', locals: { book: @book } %>
		</div>
		<!-- ここまで -->

		<!-- コメント入力フォーム -->
      	<%= render partial: 'book_comments/form', locals: { book: @book, book_comment: @book_comment } %>


		<!-- ここまで -->
	</div>
</div>

